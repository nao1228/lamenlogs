
<ul class="list-unstyled">
  <% posts.each do |post| %>
   

    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(post.user, { size: 30 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        
      
        <div>
          <p>店名:<%= post.shop %></p>
        </div>
        <div>
          <p>レビュー:<%= post.content %></p>
        </div>
        <div>
          <p><%= image_tag post.img.url if post.img %></p>
        </div>
        
        
        <div class = "row">
        <% if current_user == post.user %>
          <%= link_to "編集", edit_post_path(post), class: 'btn btn-success btn-sm m-1' %>
          <%= link_to "削除", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm m-1' %>
        <% end %>
          <%= render "favorites/favorite_button", post: post %>
        
        </div>
      </div>
    </li>

  <% end %>
  <%= paginate posts %>
</ul>

